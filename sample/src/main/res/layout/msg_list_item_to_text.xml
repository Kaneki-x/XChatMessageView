<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:custom="http://schemas.android.com/apk/res-atuo"
                android:id="@+id/rl_msg_list_item_text_to"
                android:paddingBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/tv_msg_list_item_text_to_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        android:text="2014-02-21"
        android:textColor="#b2b2b2"
        android:textSize="12dp" />


    <ImageView
        android:id="@+id/riv_msg_list_item_text_to_portrait"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="3.5dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/public_avatar_s"
        android:layout_below="@+id/tv_msg_list_item_text_to_date"
        android:layout_marginRight="15dp"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_below="@id/tv_msg_list_item_text_to_date"
        android:layout_toLeftOf="@+id/riv_msg_list_item_text_to_portrait">

        <!-- msg -->
        <TextView
            android:id="@+id/tv_msg_list_item_text_to_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="phone|web"
            android:background="@drawable/chat_to_bg"
            android:lineSpacingExtra="3dp"
            android:layout_alignParentRight="true"
            android:descendantFocusability="blocksDescendants"
            android:text="你好"
            android:maxWidth="228dip"
            android:minWidth="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="#ffffff"
            android:textSize="15dp"/>
    </RelativeLayout>
</RelativeLayout>