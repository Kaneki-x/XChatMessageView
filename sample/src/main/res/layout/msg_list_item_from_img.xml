<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_msg_list_item_img_from"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="8dp"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_msg_list_item_img_from_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:includeFontPadding="false"
        android:layout_marginBottom="7dp"
        android:layout_marginTop="7dp"
        android:text="2014-02-21"
        android:textColor="#b2b2b2"
        android:textSize="12dp" />

    <ImageView
        android:id="@+id/riv_msg_list_item_img_from_portrait"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tv_msg_list_item_img_from_date"
        android:layout_marginTop="3.5dp"
        android:layout_marginLeft="15dp"
        android:src="@drawable/public_avatar_s" />

    <me.kaneki.sample.view.BubbleImageView
        android:id="@+id/tv_msg_list_item_img_from_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="3.5dp"
        android:layout_below="@+id/tv_msg_list_item_img_from_date"
        android:layout_toRightOf="@id/riv_msg_list_item_img_from_portrait"
        android:src="@drawable/pic_test"
        app:bubble_angle="5dp"
        app:bubble_arrowHeight="10dp"
        app:bubble_arrowLocation="left"
        app:bubble_arrowOffset="-5dp"
        app:bubble_arrowTop="12dp"
        app:bubble_arrowWidth="6dp"
        />

</RelativeLayout>